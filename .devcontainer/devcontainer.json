{
  "workspaceFolder": "/odoo/godoo",
  // Container Settings
  "dockerComposeFile": [
    "../docker/docker-compose.base.yml",
    "../docker/docker-compose.traefik.yml",
    "../docker/docker-compose.devcontainer.yml",
    "../docker/docker-compose.devcontainer-traefik.yml"
  ],
  "service": "app",
  "shutdownAction": "stopCompose",
  "remoteUser": "ContainerUser",
  "initializeCommand": "./scripts/container_requirements.sh",
  "postCreateCommand": "pre-commit install --install-hooks && echo 'Post Create Done'",
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}/" // For Docker compose workspace bindmount
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // Python:
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "ms-python.isort",
        "oderwat.indent-rainbow",
        "njpwerner.autodocstring",
        "visualstudioexptteam.vscodeintellicode",
        // Database:
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        // Odoo:
        "jigar-patel.odoosnippets",
        "scapigliato.vsc-odoo-development",
        // "trinhanhngoc.vscode-odoo",
        // Git Tools:
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "github.vscode-github-actions",
        // XML:
        "redhat.vscode-xml",
        "formulahendry.auto-close-tag",
        // CSV:
        "mechatroner.rainbow-csv",
        "janisdd.vscode-edit-csv",
        // Misc:
        "bungcip.better-toml",
        "gruntfuggly.todo-tree",
        "naumovs.color-highlight",
        "esbenp.prettier-vscode",
        "christian-kohler.path-intellisense",
        "yzhang.markdown-all-in-one",
        // Copilot:
        "Github.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "files.insertFinalNewline": true,
        "editor.snippetSuggestions": "bottom",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.sortImports": true
        },
        "terminal.integrated.scrollback": 10000,
        // SQL Tools with Connection to db devcontainer:
        "sqltools.connections": [
          {
            "name": "OdooDB",
            "driver": "PostgreSQL",
            "previewLimit": 50,
            "server": "db",
            "port": 5432,
            "database": "odoo",
            "username": "odoo_user",
            "password": "odoo"
          }
        ],
        "sqltools.autoOpenSessionFiles": false,
        "sqltools.highlightQuery": true,
        // Python Settings:
        "python.pythonPath": "/odoo/venv/bin/python",
        "python.defaultInterpreterPath": "/odoo/venv/bin/python",
        "python.languageServer": "Pylance",
        "[python]": {
          "editor.codeActionsOnSave": {
            "source.organizeImports": true
          },
          "editor.defaultFormatter": "ms-python.black-formatter"
        },
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[xml]": {
          "editor.defaultFormatter": "redhat.vscode-xml",
          "xml.format.joinCommentLines": false
        }
      }
    }
  }
}
